class Solution {
public:
    long long subarraysDivByK(vector<int>& nums, int k) {
        long long ans = 0;
        vector<int> count(k, 0);
        count[0] = 1;              
        int prefix = 0;

        for (int num : nums) {
            
            prefix = ((prefix + num) % k + k) % k;
            ans += count[prefix];  
            ++count[prefix];
        }
        return ans;
    }
};
